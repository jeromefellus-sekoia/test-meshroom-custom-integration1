{
  "uuid": "7e247f1c-c26e-4378-b10b-7ebdb668818d",
  "name": "Name Passive DNS",
  "docker_parameters": "pdns_name",
  "description": "Retrieve results by searching for specified resource name within PDNS record data field.",
  "arguments": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": {
        "in": "query",
        "type": "string"
      },
      "type": {
        "in": "query",
        "type": "string",
        "description": "DNS resource record type"
      },
      "max": {
        "in": "query",
        "type": "string"
      },
      "lastSeenAfter": {
        "in": "query",
        "type": "string"
      },
      "firstSeenBefore": {
        "in": "query",
        "type": "string"
      }
    },
    "required": [
      "name"
    ]
  },
  "results": {
    "type": "object",
    "properties": {
      "recordCount": {
        "type": "integer",
        "format": "int32"
      },
      "records": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
